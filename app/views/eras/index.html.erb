<div class="travels-container">
  <h1>Available Travels</h1>
  <div class="footer-links">
    <a href="https://github.com/Rox1610" target="_blank"><i class="fab fa-github"></i></a>
    <a href="https://www.instagram.com/rox__dvl/" target="_blank"><i class="fab fa-instagram"></i></a>
    <a href="https://www.linkedin.com/in/roxanne-devillers-b2751154/" target="_blank"><i class="fab fa-linkedin"></i></a>
  </div>

  <div class=" container-era row row-cols-1 row-cols-md-3 g-4">
    <% @eras.each do |era| %>
      <div class="card-trip me-2">
        <%= cl_image_tag era.photo.key %>
        <div class="card-trip-infos">
          <div>
            <h2><%= era.title %></h2>
          </div>
          <h2 class="card-trip-pricing"><%= era.price %> $/hour</h2>
        </div>
      </div>
    <% end %>
  </div>
</div>
